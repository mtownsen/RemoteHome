<div class="login">
    <!-- Register -->
    <div class="login__block active" id="l-register">
        <div class="login__block__header palette-Blue bg">
            <i class="zmdi zmdi-account-circle"></i>
            Create an account

            <div class="actions actions--inverse login__block__actions">
                <div class="dropdown">
                    <i data-toggle="dropdown" class="zmdi zmdi-more-vert actions__item"></i>
                    <div class="dropdown-menu dropdown-menu-right">
                      <%= link_to "Create an account", new_session_path(resource_name), class: 'dropdown-item' %>
                      <%= link_to "Forgot password?", new_password_path(resource_name), class: 'dropdown-item' %>
                    </div>
                </div>
            </div>
        </div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="login__block__body">
              <div class="form-group form-group--float form-group--centered">
                  <%= f.simple_fields_for :company do |c| %>
                    <%= c.input :name, 
                          class: 'form-control', 
                          required: true, autofocus: true,
                          label: false, wrapper: false %>
                  <% end %>                  
                  <label>Company Name</label>
                  <i class="form-group__bar"></i>
              </div>

              <div class="form-group form-group--float form-group--centered">
                  <%= f.input :name, 
                    class: 'form-control', 
                    required: true, label: false, wrapper: false %>
                  <label>Name</label>
                  <i class="form-group__bar"></i>
              </div>

              <div class="form-group form-group--float form-group--centered">
                  <%= f.input :email, 
                    class: 'form-control', 
                    required: true, label: false, wrapper: false %>
                  <label>Email Address</label>
                  <i class="form-group__bar"></i>
              </div>

              <div class="form-group form-group--float form-group--centered">
                  <%= f.input :password, 
                    class: 'form-control', 
                    required: true, label: false, wrapper: false %>
                  <label>Password</label>
                  <i class="form-group__bar"></i>
              </div>

              <div class="form-group">
                  <label class="custom-control custom-checkbox">
                      <input type="checkbox" class="custom-control-input">
                      <span class="custom-control-indicator"></span>
                      <span class="custom-control-description">Accept the license agreement</span>
                  </label>
              </div>

              <button href="index.html" class="btn btn--icon login__block__btn"><i class="zmdi zmdi-check"></i></button>
          </div>
        <% end %> 
    </div>
</div>